<table style="font-size: 1rem;">
  <tr>
    <th>Hour</th>
    <% hour_data.each do |hour|%>
      <td class="info"><%= hour[0] %></td>
    <% end %>
  </tr>
  <tr>
    <th>Wind</th>
    <% hour_data.each do |hour|%>
      <td class="windpower info" data-controller="hello"><div data-target="hello.output"><%= hour[1] %></div></td>
    <% end %>
  </tr>
  <tr>
    <th>Dir.</th>
    <% hour_data.each do |hour|%>
      <td class="wind_direction " data-controller="wind-direction" ><div data-target="wind-direction.arrow" value="<%= hour[3]%>"><i class="fas fa-location-arrow"></i></td>
    <% end %>
  </tr>
</table>
